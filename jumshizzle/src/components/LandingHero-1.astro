---
import siteConfig from '../../site.config.mjs';

const owner = siteConfig.owner;
---

<div class="absolute left-0 right-0 z-0">
	<div class="text-center mb-12 relative z-10">
		<h1 class="text-6xl md:text-7xl lg:text-8xl font-thin tracking-tight leading-none mb-6">
			JUMSHAID
		</h1>
		<h2 class="text-5xl md:text-6xl lg:text-7xl font-thin tracking-wide leading-none">
			ZEE
		</h2>
		<p class="mt-8 text-sm md:text-base uppercase tracking-[0.3em] text-gray-600 font-light">
			Photographer & Videographer
		</p>
		<div class="mt-12 flex flex-col sm:flex-row gap-4 justify-center">
			<a
				href="/collections"
				class="inline-block px-8 py-3 border border-black
						  hover:bg-black hover:text-white transition-all duration-500
						  text-xs uppercase tracking-wider font-light"
			>
				View Photography
			</a>
			<a
				href="/films"
				class="inline-block px-8 py-3 border border-black
						  hover:bg-black hover:text-white transition-all duration-500
						  text-xs uppercase tracking-wider font-light"
			>
				Watch Films
			</a>
		</div>
	</div>
</div>
