---
import MainLayout from '../layouts/MainLayout.astro';
import { Content as AboutPage } from '../content/about.md';
import siteConfig from '../../site.config.mjs';

const profileImage = siteConfig.profileImage;
---

<MainLayout>
	<section class="pt-32 pb-20">
		<div class="container-custom">
			<div class="max-w-2xl mx-auto text-center mb-16">
				<h1 class="text-4xl md:text-5xl font-thin tracking-wide mb-4">JUMSHAID</h1>
			</div>

			<div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
				<div>
					<img
						src={`/images/${profileImage}`}
						alt="Jumshaid Zee"
						class="w-full h-auto grayscale hover:grayscale-0 transition-all duration-700"
						width="720"
						height="720"
					/>
				</div>

				<div class="space-y-6">
					<div class="prose prose-lg font-light leading-relaxed max-w-none">
						<AboutPage />
					</div>
					<div class="pt-8 space-y-4">
						<h3 class="text-xs uppercase tracking-widest text-gray-500">Services</h3>
						<ul class="space-y-2 text-lg font-light">
							<li>Wedding Photography & Videography</li>
							<li>Commercial Films</li>
							<li>Documentary Production</li>
							<li>Portrait Sessions</li>
							<li>Event Coverage</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</section>
</MainLayout>
