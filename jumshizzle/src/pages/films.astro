---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout>
	<div class="min-h-screen pt-32 pb-20">
		<div class="container-custom">
			<h1 class="text-4xl md:text-5xl font-thin tracking-wide mb-12 text-center">FILMS</h1>
			
			<div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-6xl mx-auto">
				<!-- Film 1 -->
				<div class="group cursor-pointer">
					<div class="aspect-video bg-gray-100 overflow-hidden">
						<div class="w-full h-full bg-black/90 flex items-center justify-center group-hover:bg-black/70 transition-all duration-500">
							<div class="text-center">
								<h3 class="text-white text-lg font-light tracking-wider mb-2">URBAN RHYTHMS</h3>
								<p class="text-gray-400 text-sm uppercase tracking-widest">Documentary • 2024</p>
							</div>
						</div>
					</div>
				</div>

				<!-- Film 2 -->
				<div class="group cursor-pointer">
					<div class="aspect-video bg-gray-100 overflow-hidden">
						<div class="w-full h-full bg-black/90 flex items-center justify-center group-hover:bg-black/70 transition-all duration-500">
							<div class="text-center">
								<h3 class="text-white text-lg font-light tracking-wider mb-2">SILENT MOMENTS</h3>
								<p class="text-gray-400 text-sm uppercase tracking-widest">Short Film • 2024</p>
							</div>
						</div>
					</div>
				</div>

				<!-- Film 3 -->
				<div class="group cursor-pointer">
					<div class="aspect-video bg-gray-100 overflow-hidden">
						<div class="w-full h-full bg-black/90 flex items-center justify-center group-hover:bg-black/70 transition-all duration-500">
							<div class="text-center">
								<h3 class="text-white text-lg font-light tracking-wider mb-2">NATURE'S CANVAS</h3>
								<p class="text-gray-400 text-sm uppercase tracking-widest">Cinematic • 2023</p>
							</div>
						</div>
					</div>
				</div>

				<!-- Film 4 -->
				<div class="group cursor-pointer">
					<div class="aspect-video bg-gray-100 overflow-hidden">
						<div class="w-full h-full bg-black/90 flex items-center justify-center group-hover:bg-black/70 transition-all duration-500">
							<div class="text-center">
								<h3 class="text-white text-lg font-light tracking-wider mb-2">WEDDING STORIES</h3>
								<p class="text-gray-400 text-sm uppercase tracking-widest">Wedding • 2023</p>
							</div>
						</div>
					</div>
				</div>
			</div>

			<div class="text-center mt-16">
				<p class="text-gray-600 text-sm uppercase tracking-widest">More films coming soon</p>
			</div>
		</div>
	</div>
</MainLayout>