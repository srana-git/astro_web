---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout>
	<div class="min-h-screen pt-32 pb-20">
		<div class="container-custom max-w-4xl">
			<h1 class="text-4xl md:text-5xl font-thin tracking-wide mb-12 text-center">CONTACT</h1>
			
			<div class="grid grid-cols-1 md:grid-cols-2 gap-12">
				<!-- Contact Info -->
				<div class="space-y-8">
					<div>
						<h3 class="text-xs uppercase tracking-widest text-gray-500 mb-3">Email</h3>
						<a href="mailto:hello@jumshaidzee.com" class="text-lg font-light hover:opacity-60 transition-opacity">
							hello@jumshaidzee.com
						</a>
					</div>
					
					<div>
						<h3 class="text-xs uppercase tracking-widest text-gray-500 mb-3">Phone</h3>
						<a href="tel:+1234567890" class="text-lg font-light hover:opacity-60 transition-opacity">
							+1 (234) 567-890
						</a>
					</div>
					
					<div>
						<h3 class="text-xs uppercase tracking-widest text-gray-500 mb-3">Social</h3>
						<div class="space-y-2">
							<a href="https://instagram.com" target="_blank" class="block text-lg font-light hover:opacity-60 transition-opacity">
								Instagram
							</a>
							<a href="https://vimeo.com" target="_blank" class="block text-lg font-light hover:opacity-60 transition-opacity">
								Vimeo
							</a>
							<a href="https://youtube.com" target="_blank" class="block text-lg font-light hover:opacity-60 transition-opacity">
								YouTube
							</a>
						</div>
					</div>
				</div>
				
				<!-- Contact Form -->
				<div>
					<form class="space-y-6">
						<div>
							<input 
								type="text" 
								placeholder="NAME" 
								class="w-full px-0 py-3 border-0 border-b border-gray-300 focus:border-black focus:outline-none text-sm tracking-wider placeholder-gray-400"
							/>
						</div>
						
						<div>
							<input 
								type="email" 
								placeholder="EMAIL" 
								class="w-full px-0 py-3 border-0 border-b border-gray-300 focus:border-black focus:outline-none text-sm tracking-wider placeholder-gray-400"
							/>
						</div>
						
						<div>
							<select class="w-full px-0 py-3 border-0 border-b border-gray-300 focus:border-black focus:outline-none text-sm tracking-wider text-gray-400">
								<option value="">PROJECT TYPE</option>
								<option value="photography">Photography</option>
								<option value="videography">Videography</option>
								<option value="both">Photography & Videography</option>
								<option value="other">Other</option>
							</select>
						</div>
						
						<div>
							<textarea 
								placeholder="MESSAGE" 
								rows="4"
								class="w-full px-0 py-3 border-0 border-b border-gray-300 focus:border-black focus:outline-none text-sm tracking-wider placeholder-gray-400 resize-none"
							></textarea>
						</div>
						
						<button 
							type="submit"
							class="px-8 py-3 border border-black hover:bg-black hover:text-white transition-all duration-500 text-xs uppercase tracking-wider font-light"
						>
							Send Message
						</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</MainLayout>